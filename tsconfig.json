{
  "extends": "@tsconfig/node20/tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": false,
    "module": "ESNext",
    "target": "ES2022",
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": ["src"]
}